<div id="album-card" class="cursor-pointer bg-gray-100">
    <div id="album-id" class="hidden">{{id}}</div>
    <img id="album-picture" src="{{#if small}}{{cover_small}}{{else}}{{cover_medium}}{{/if}}" class="rounded-md m-auto hover:opacity-75 transition ease-in-out">
    <div id="album-name" class="text-center {{#unless small}}my-3 m-auto{{/unless}}">{{title}}</div>
</div>