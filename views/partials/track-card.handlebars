<tr class="border-b bg-gray-400">
    {{#if home}}
    <td id="track-artist" class="p-2 cursor-pointer">{{artist.name}}<span class="hidden">{{artist.id}}</span></td>
    {{/if}}
    {{#if albumPage}}
    <td class="text-center p-2">{{plus_one @index}}</td>
    {{/if}}
    <td id="track-title" class="p-2">{{title}} {{#if explicit_lyrics}}<img src="https://img.shields.io/badge/-E-000??style=for-the-badge" alt="explicit badge" class="inline">{{/if}}</td>
    <td id="track-time" class="text-center p-2">{{format_time duration}}</td>
    {{#unless home}}
    <td class="p-2 text-center">
        {{#if preview}}
        <audio controls class="mx-auto">
            <source src="{{preview}}" type="audio/mpeg">
        </audio>
        {{else}}
        <span>No preview available!</span>
        {{/if}}
    </td>
    {{/unless}}
</tr>