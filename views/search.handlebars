{{> nav}}

<section id="top-result" class="flex flex-col items-center">
    <h2 id="top-result-header" class="text-xl font-bold m-2">Top Result</h2>
    <div id="top-result-container" class="m-2">
        {{> artist-card artists.data.[0] medium='true'}}
    </div>
</section>

<section id="track-results">
    <h2 id="track-results-header" class="text-xl font-bold my-2 mx-4">Tracks</h2>
    <div id="track-results-container" class="p-2 m-2">
        <table class="table-fixed w-full">
            <thead>
                <tr class="bg-gray-300 h-10">
                    <th>Name</th>
                    <th>Duration</th>
                    <th class="lg:table-cell hidden">Preview</th>
                </tr>
            </thead>
            <tbody>
                {{#each tracks.data}}
                    {{> track-card}}
                {{/each}}
            </tbody>
        </table>
    </div>
</section>

<section id="artist-results">
    <h2 id="artist-results-header" class="text-xl font-bold my-2 mx-4">Artists</h2>
    <div id="artist-results-container" class="flex p-2 m-2 overflow-x-auto">
        {{#each artists.data}}
            {{> artist-card round='true' medium='true'}}
        {{/each}}
    </div>
</section>

<section id="album-results">
    <h2 id="album-results-header" class="text-xl font-bold my-2 mx-4">Albums</h2>
    <div id="album-results-container" class="flex p-2 m-2 overflow-x-auto">
        {{#each albums.data}}
            {{> album-card}}
        {{/each}}
    </div>
</section>

{{> footer}}

<script src="/js/search.js"></script>