{{> nav}}
<h1 id="login-header">Login Page</h1>
<form id="login-form">
    <label for="email">Email:</label>
    <input type="text" id="email-input" name="email">
    <label for="password">Password:</label>
    <input type="password" id="password-input" name="password">
    <span id="err-msg" class="display-none">Username or Password is incorrect!</span>
    <button type="submit" id="login-form-btn">Login</button>
</form>
<div class="goto-container">Don't have an account yet? <button id="goto-signup-btn">Sign Up</button></div>

<script src="js/login.js"></script>